@import './styles/variables.wxss';

page {
  background-color: #FFF5F8;
  font-size: 28rpx;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.5;
}

.container {
  padding: 24rpx;
  padding-bottom: 200rpx;
}

/* 卡片样式 - 根据设计图调整 */
.card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
}

/* 按钮样式 - 优化文字居中 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  min-width: 160rpx;
  padding: 0 48rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin: 0;
  gap: 12rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 1;
  vertical-align: middle;
  white-space: nowrap;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.3);
}

.btn-secondary {
  background: #FFFFFF;
  color: #666666;
  border: 2rpx solid #FFE4E8;
  box-shadow: none;
}

.btn-outline {
  background: transparent;
  color: #FF6B9D;
  border: 2rpx solid #FF6B9D;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 96rpx;
  padding: 0 28rpx;
  border: 2rpx solid #FFE4E8;
  border-radius: 24rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  color: #333333;
}

.input:focus {
  background: #FFFFFF;
  border-color: #FF6B9D;
}

/* 文字工具类 */
.text-primary { color: #FF6B9D; }
.text-secondary { color: #999999; }
.text-center { text-align: center; }

/* Flex布局工具类 */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-1 { flex: 1; }
.items-center { align-items: center; }
.justify-center { justify-content: center; }
.justify-between { justify-content: space-between; }
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.gap-sm { gap: 16rpx; }
.gap-md { gap: 24rpx; }

/* 间距工具类 */
.mt-sm { margin-top: 12rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mb-sm { margin-bottom: 12rpx; }
.mb-md { margin-bottom: 24rpx; }
.ml-sm { margin-left: 12rpx; }
.mr-sm { margin-right: 12rpx; }

.p-sm { padding: 16rpx; }
.p-md { padding: 24rpx; }
.p-lg { padding: 32rpx; }

/* 圆角工具类 */
.rounded-md { border-radius: 24rpx; }
.rounded-lg { border-radius: 32rpx; }
.rounded-full { border-radius: 9999rpx; }

/* 字体工具类 */
.font-medium { font-weight: 500; }
.font-bold { font-weight: 600; }
.font-bolder { font-weight: 700; }
.text-sm { font-size: 24rpx; }
.text-md { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  font-weight: 500;
}

/* 区块标题 */
.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
}

/* 徽章样式 */
.badge {
  display: inline-block;
  padding: 8rpx 24rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.badge-primary {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: #FFFFFF;
}

/* 按钮尺寸变体 */
.btn-sm {
  height: 72rpx;
  min-width: 120rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.btn-lg {
  height: 104rpx;
  min-width: 200rpx;
  padding: 0 56rpx;
  font-size: 34rpx;
  border-radius: 52rpx;
}

.btn-round {
  width: 96rpx;
  height: 96rpx;
  min-width: auto;
  padding: 0;
  border-radius: 50%;
}

.btn-block {
  width: 100%;
  min-width: auto;
}

.btn-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 按钮点击效果 */
.btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.btn-primary:active {
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.2);
}

.btn-secondary:active {
  background: #FFF5F8;
}

/* 列表项样式 */
.list-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #FFE4E8;
}

.list-item:last-child {
  border-bottom: none;
}

/* 统计卡片样式 */
.stat-card {
  flex: 1;
  text-align: center;
  padding: 36rpx 24rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 28rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

/* 分割线 */
.divider {
  width: 1rpx;
  height: 72rpx;
  background: #FFE4E8;
}

/* 渐变背景 */
.bg-gradient {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
}

/* 毛玻璃效果 */
.glass {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(16rpx);
  border-radius: 24rpx;
}
