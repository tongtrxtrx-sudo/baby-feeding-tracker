.advice-card {
  display: flex;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.advice-card.warning {
  background: linear-gradient(135deg, #FFF5F5, #FFE5E5);
  border-left: 6rpx solid #FF7675;
}

.advice-card.success {
  background: linear-gradient(135deg, #F0FFF4, #E0F7F1);
  border-left: 6rpx solid #00B894;
}

.advice-card.info {
  background: linear-gradient(135deg, #F0F8FF, #E3F2FD);
  border-left: 6rpx solid #74B9FF;
}

.advice-card.tip {
  background: linear-gradient(135deg, #FFF8E0, #FFF5D6);
  border-left: 6rpx solid #FDCB6E;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.card-content {
  flex: 1;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3436;
  margin-bottom: 8rpx;
}

.card-text {
  font-size: 24rpx;
  color: #636E72;
  line-height: 1.6;
}
