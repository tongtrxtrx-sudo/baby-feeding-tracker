.feeding-card {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(255, 140, 105, 0.06);
  transition: all 0.3s ease;
}

.feeding-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 105, 0.12);
}

.card-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.card-icon.breast {
  background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
}

.card-icon.formula {
  background: linear-gradient(135deg, #E3F2FD, #BBDEFB);
}

.card-icon.mixed {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 8rpx;
}

.card-amount {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3436;
}

.card-time {
  font-size: 24rpx;
  color: #B2BEC3;
}

.card-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-tag {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.info-tag.breast {
  background: #E8F5E9;
  color: #4CAF50;
}

.info-tag.formula {
  background: #E3F2FD;
  color: #2196F3;
}

.info-tag.mixed {
  background: #FFF3E0;
  color: #FF9800;
}

.info-note {
  font-size: 22rpx;
  color: #B2BEC3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn.edit {
  background: #FFF9F6;
}

.action-btn.edit:active {
  background: #FFE8E0;
}

.action-btn.delete {
  background: #FFF5F5;
}

.action-btn.delete:active {
  background: #FFE5E5;
}
