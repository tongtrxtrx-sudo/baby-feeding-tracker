.growth-chart {
  position: relative;
  width: 100%;
  height: 420rpx;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

.tooltip {
  position: absolute;
  background: rgba(45, 52, 54, 0.9);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  transform: translate(-50%, -120%);
  pointer-events: none;
  z-index: 10;
}

.tooltip-content {
  white-space: nowrap;
}

.tooltip-title {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
}

.tooltip-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #FFFFFF;
}
