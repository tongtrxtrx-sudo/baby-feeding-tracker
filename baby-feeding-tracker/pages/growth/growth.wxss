.empty-state {
  text-align: center;
  padding: 160rpx 48rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
}

.add-btn {
  width: 320rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 图表标签页 */
.chart-tabs {
  display: flex;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 10rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
  transition: all 0.2s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: #FFFFFF;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 157, 0.25);
}

/* 图表卡片 */
.chart-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.chart-unit {
  font-size: 24rpx;
  color: #999999;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.chart-wrapper {
  height: 400rpx;
}

.chart-placeholder {
  height: 400rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #FFE4E8;
}

.placeholder-text {
  font-size: 30rpx;
  color: #FF6B9D;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.placeholder-desc {
  font-size: 24rpx;
  color: #999999;
}

/* WHO标准卡片 */
.standard-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

.standard-title {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 24rpx;
  font-weight: 700;
}

.standard-values {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 12rpx;
  margin-bottom: 28rpx;
}

.value-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  padding: 20rpx 12rpx;
  border-radius: 16rpx;
}

.value-label {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 8rpx;
  font-weight: 500;
  text-align: center;
}

.value-number {
  font-size: 24rpx;
  color: #FF6B9D;
  font-weight: 700;
}

.standard-legend-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  font-weight: 700;
}

.standard-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.legend-line {
  width: 36rpx;
  height: 6rpx;
  border-radius: 3rpx;
}

.legend-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}

.legend-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
}

.standard-loading {
  padding: 36rpx;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
  font-weight: 500;
}

/* 添加按钮 */
.add-btn-wrapper {
  margin-bottom: 24rpx;
}

.add-growth-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  gap: 12rpx;
}

/* 列表头部 */
.list-header {
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

/* 生长记录列表 */
.growth-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.growth-card {
  padding: 28rpx 32rpx;
  border-radius: 32rpx;
}

.growth-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.growth-date {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.growth-actions {
  display: flex;
  gap: 8rpx;
}

.growth-edit,
.growth-delete {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.growth-edit:active,
.growth-delete:active {
  background: #FFF5F8;
}

.growth-body {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.growth-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 12rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 20rpx;
}

.growth-value {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  color: #FF6B9D;
}

.growth-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.growth-divider {
  width: 1rpx;
  height: 60rpx;
  background: #FFE4E8;
}

.growth-note {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #FFE4E8;
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 无数据状态 */
.no-data {
  text-align: center;
  padding: 120rpx 0;
}

.no-data-icon {
  font-size: 140rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-data-text {
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: #FFFFFF;
  width: 100%;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  max-height: 88vh;
  overflow-y: auto;
  box-shadow: 0 -8rpx 48rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.modal-close {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #FFF5F8;
}

.modal-body {
  padding-bottom: 20rpx;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.form-input {
  background: #FFF5F8;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  color: #333333;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #FFFFFF;
  border-color: #FF6B9D;
}

.form-picker {
  background: #FFF5F8;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.form-picker:active {
  background: #FFF5F8;
  border-color: #FF6B9D;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
}
