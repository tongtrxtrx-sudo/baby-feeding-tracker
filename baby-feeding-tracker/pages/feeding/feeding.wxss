.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
  font-weight: 500;
}

.add-btn {
  width: 320rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.stats-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
}

.stats-date {
  font-size: 26rpx;
  color: #999999;
  background: #FFF5F8;
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.stats-row {
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 16rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 28rpx;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.add-btn-wrapper {
  margin-bottom: 24rpx;
}

.add-feeding-btn {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 52rpx;
  gap: 16rpx;
}

.feedings-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.feeding-card {
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
}

.feeding-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.feeding-date {
  font-size: 28rpx;
  color: #666666;
  font-weight: 600;
}

.feeding-actions {
  display: flex;
  gap: 12rpx;
}

.feeding-edit,
.feeding-delete {
  font-size: 40rpx;
  padding: 12rpx;
  color: #999999;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.feeding-edit:active,
.feeding-delete:active {
  background: #FFF5F8;
}

.feeding-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.feeding-info {
  flex: 1;
}

.feeding-type {
  font-size: 34rpx;
  color: #333333;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.feeding-time {
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
  font-weight: 500;
}

.feeding-amount {
  text-align: right;
}

.amount-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF6B9D;
}

.feeding-note {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #FFE4E8;
  font-size: 28rpx;
  line-height: 1.7;
  color: #666666;
}

.no-data {
  text-align: center;
  padding: 160rpx 0;
}

.no-data-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.no-data-text {
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: #FFFFFF;
  width: 100%;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx;
  max-height: 88vh;
  overflow-y: auto;
  box-shadow: 0 -8rpx 48rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 44rpx;
}

.modal-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #333333;
}

.modal-close {
  font-size: 52rpx;
  color: #999999;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #FFF5F8;
}

.modal-body {
  padding-bottom: 24rpx;
}

.form-item {
  margin-bottom: 36rpx;
}

.form-label {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.form-input {
  background: #FFF5F8;
  border-radius: 28rpx;
  padding: 32rpx 32rpx;
  font-size: 30rpx;
  border: 2rpx solid transparent;
  height: 104rpx;
  box-sizing: border-box;
  color: #333333;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #FFFFFF;
  border-color: #FF6B9D;
}

.form-picker {
  background: #FFF5F8;
  border-radius: 28rpx;
  padding: 32rpx 32rpx;
  font-size: 30rpx;
  color: #333333;
  height: 104rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.form-picker:active {
  background: #FFF5F8;
}

.type-select {
  display: flex;
  gap: 24rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
  text-align: center;
  padding: 36rpx 24rpx;
  border: 2rpx solid #FFE4E8;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.type-option.active {
  border-color: #FF6B9D;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  color: #FF6B9D;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 36rpx;
}

.modal-btn {
  flex: 1;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 52rpx;
}
