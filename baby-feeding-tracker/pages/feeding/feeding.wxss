.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
  font-weight: 500;
}

.add-btn {
  width: 320rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 统计卡片 */
.stats-card {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.stats-date {
  font-size: 26rpx;
  color: #999999;
  background: #FFF5F8;
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.stats-row {
  display: flex;
  gap: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 16rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 24rpx;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

/* 添加按钮 */
.add-btn-wrapper {
  margin-bottom: 24rpx;
}

.add-feeding-btn {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 48rpx;
  gap: 8rpx;
}

.add-poop-btn {
  height: 96rpx;
  line-height: 96rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 48rpx;
  gap: 8rpx;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feeding-card {
  padding: 28rpx 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
}

.feeding-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.feeding-date {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.feeding-actions {
  display: flex;
  gap: 8rpx;
}

.feeding-edit,
.feeding-delete {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.feeding-edit:active,
.feeding-delete:active {
  background: #FFF5F8;
}

.feeding-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.feeding-info {
  flex: 1;
}

.feeding-type {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.feeding-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
  font-weight: 500;
}

.feeding-amount {
  text-align: right;
}

.amount-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #FF6B9D;
}

.feeding-note {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #FFE4E8;
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 大便卡片 */
.poop-card {
  padding: 28rpx 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 90, 43, 0.1);
  margin-top: 20rpx;
}

.poop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.poop-date {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.poop-actions {
  display: flex;
  gap: 8rpx;
}

.poop-edit,
.poop-delete {
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.poop-edit:active,
.poop-delete:active {
  background: #FFF5F8;
}

.poop-body {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.poop-info {
  flex: 1;
}

.poop-status {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.poop-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
  font-weight: 500;
}

.poop-note {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #FFE4E8;
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 大便状态选择 */
.status-select {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.status-option {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 28rpx;
  border: 2rpx solid #FFE4E8;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.status-option.active {
  border-color: #FF6B9D;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  color: #FF6B9D;
}

/* 无数据状态 */
.no-data {
  text-align: center;
  padding: 120rpx 0;
}

.no-data-icon {
  font-size: 140rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-data-text {
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: #FFFFFF;
  width: 100%;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx;
  max-height: 88vh;
  overflow-y: auto;
  box-shadow: 0 -8rpx 48rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 36rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.modal-close {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #FFF5F8;
}

.modal-body {
  padding-bottom: 20rpx;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.form-input {
  background: #FFF5F8;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  height: 96rpx;
  box-sizing: border-box;
  color: #333333;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #FFFFFF;
  border-color: #FF6B9D;
}

.form-picker {
  background: #FFF5F8;
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 28rpx;
  color: #333333;
  height: 96rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
}

.form-picker:active {
  background: #FFF5F8;
}

/* 类型选择 */
.type-select {
  display: flex;
  gap: 20rpx;
}

.type-option {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  text-align: center;
  padding: 32rpx 20rpx;
  border: 2rpx solid #FFE4E8;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  background: #FFFFFF;
  transition: all 0.2s ease;
}

.type-option.active {
  border-color: #FF6B9D;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  color: #FF6B9D;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
}
