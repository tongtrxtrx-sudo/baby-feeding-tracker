.empty-state {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 56rpx;
  font-weight: 500;
}

.add-btn {
  width: 320rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
}

.current-baby-card {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: white;
  padding: 48rpx;
  border-radius: 40rpx;
  overflow: hidden;
  position: relative;
  margin-bottom: 28rpx;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 157, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.welcome-decor {
  position: absolute;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.welcome-decor.decor-1 {
  top: -120rpx;
  right: -80rpx;
  width: 320rpx;
  height: 320rpx;
}

.welcome-decor.decor-2 {
  top: 140rpx;
  left: 60rpx;
  width: 220rpx;
  height: 220rpx;
}

.welcome-decor.decor-3 {
  bottom: -100rpx;
  right: 100rpx;
  width: 260rpx;
  height: 260rpx;
  background: rgba(255, 255, 255, 0.15);
}

.baby-left {
  position: relative;
  z-index: 1;
  flex: 1;
}

.baby-text {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.baby-name {
  font-size: 60rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.baby-detail {
  color: rgba(255, 255, 255, 0.92);
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: 500;
}

.baby-stats {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  font-weight: 500;
}

.baby-right {
  position: relative;
  z-index: 1;
}

.baby-avatar {
  font-size: 140rpx;
}

.section {
  margin-top: 28rpx;
}

.section-header {
  margin-bottom: 28rpx;
}

.section-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #333333;
}

.add-small-btn {
  font-size: 30rpx;
  color: #FF6B9D;
  background: transparent;
  border: none;
  padding: 0;
  font-weight: 600;
}

.baby-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.baby-item {
  margin-bottom: 0;
  padding: 36rpx;
  border-radius: 36rpx;
}

.baby-item-header {
  align-items: flex-start;
}

.baby-item-info {
  flex: 1;
}

.baby-item-name {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.baby-item-name.active {
  color: #FF6B9D;
  font-weight: 700;
}

.baby-item-detail {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.5;
  font-weight: 500;
}

.current-badge {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: white;
  font-size: 26rpx;
  padding: 12rpx 32rpx;
  border-radius: 50rpx;
  font-weight: 600;
}

.baby-item-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.action-btns {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 26rpx;
  padding: 14rpx 28rpx;
  border-radius: 50rpx;
  font-weight: 600;
}

.action-btn.edit {
  background: #E8F5FF;
  color: #1890FF;
  border: 2rpx solid #1890FF;
}

.action-btn.delete {
  background: #FFF1F0;
  color: #FF4D4F;
  border: 2rpx solid #FF4D4F;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  background: white;
  width: 100%;
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx;
  animation: slideUp 0.3s ease;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 0 -12rpx 64rpx rgba(0, 0, 0, 0.18);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
}

.modal-close {
  font-size: 52rpx;
  color: #999999;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.modal-close:active {
  background: #FFF5F8;
}

.modal-body {
  padding-bottom: 24rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.form-input {
  background: #FFF5F8;
  border-radius: 28rpx;
  padding: 32rpx 32rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
  color: #333333;
}

.form-input:focus {
  background: #FFFFFF;
  border-color: #FF6B9D;
}

.form-picker {
  background: #FFF5F8;
  border-radius: 28rpx;
  padding: 32rpx 32rpx;
  font-size: 32rpx;
  color: #333333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-picker:active {
  background: #F5F5F5;
  border-color: #FF6B9D;
}

.gender-select {
  gap: 24rpx;
}

.gender-option {
  flex: 1;
  text-align: center;
  padding: 40rpx 24rpx;
  border: 2rpx solid #FFE4E8;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.gender-option.active {
  border-color: #FF6B9D;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  color: #FF6B9D;
  font-weight: 700;
}

.gender-option:active {
  transform: scale(0.96);
}

.modal-footer {
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 52rpx;
}
