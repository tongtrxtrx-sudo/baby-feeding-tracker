.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.add-btn {
  width: 300rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 报告头部 */
.report-header {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: white;
  text-align: center;
  margin-bottom: 24rpx;
  padding: 40rpx 36rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 157, 0.3);
}

.report-header::before {
  content: '';
  position: absolute;
  top: -60rpx;
  right: -60rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.report-header::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  right: 100rpx;
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.header-baby {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

/* 区块卡片 */
.feeding-section,
.growth-section,
.no-growth,
.stats-section {
  margin-bottom: 24rpx;
  padding: 32rpx;
  border-radius: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 36rpx;
}

/* 喂养摘要 */
.feeding-summary {
  margin-bottom: 24rpx;
}

.summary-row {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #FFE4E8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.summary-row:last-of-type {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
}

.status-badge {
  display: inline-block;
  margin-top: 20rpx;
  padding: 12rpx 32rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 600;
}

/* 建议框 */
.advice-box {
  background: linear-gradient(180deg, #FFF5F8 0%, #FFFFFF 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  border: 1rpx solid #FFE4E8;
}

.advice-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 14rpx;
}

.advice-text,
.advice-item {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.advice-item {
  margin-bottom: 10rpx;
  padding-left: 18rpx;
  position: relative;
}

.advice-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #FF6B9D;
  font-weight: bold;
}

.advice-item:last-child {
  margin-bottom: 0;
}

/* 生长网格 */
.growth-grid {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 20rpx;
}

.growth-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 14rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 20rpx;
}

.growth-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.growth-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.growth-percentile {
  font-size: 24rpx;
  color: #FF6B9D;
  margin-bottom: 6rpx;
  font-weight: 600;
}

.growth-status {
  font-size: 24rpx;
  font-weight: 600;
}

.growth-divider {
  width: 1rpx;
  height: 90rpx;
  background: #FFE4E8;
}

/* 标准框 */
.standard-box {
  background: linear-gradient(180deg, #FFF5F8 0%, #FFFFFF 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #FFE4E8;
}

.standard-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 700;
}

.standard-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.standard-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 6rpx;
  font-weight: 500;
}

.standard-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #333333;
}

.mt-20 {
  margin-top: 20rpx;
}

/* 无生长数据 */
.no-growth {
  text-align: center;
  padding: 60rpx 36rpx;
}

.no-growth-icon {
  font-size: 90rpx;
  margin-bottom: 20rpx;
}

.no-growth-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 28rpx;
  font-weight: 500;
}

.add-growth-btn {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
}

/* 统计网格 */
.stats-grid {
  display: flex;
  gap: 16rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFFFFF 100%);
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  border: 1rpx solid #FFE4E8;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.stat-desc {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}
