.empty-state {
  text-align: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.add-btn {
  width: 300rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
}

.report-header {
  background: linear-gradient(135deg, #FF6B9D 0%, #FFB6C1 100%);
  color: white;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 48rpx 40rpx;
  border-radius: 32rpx;
  overflow: hidden;
  position: relative;
}

.report-header::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.report-header::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  right: 120rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.header-baby {
  font-size: 30rpx;
  opacity: 0.95;
  font-weight: 500;
  position: relative;
  z-index: 1;
}

.feeding-section,
.growth-section,
.no-growth,
.stats-section {
  margin-bottom: 20rpx;
  padding: 36rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 28rpx;
}

.title-icon {
  font-size: 40rpx;
}

.feeding-summary {
  margin-bottom: 28rpx;
}

.summary-row {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F8F8F8;
}

.summary-row:last-of-type {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
}

.status-badge {
  display: inline-block;
  margin-top: 24rpx;
  padding: 14rpx 36rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.advice-box {
  background: linear-gradient(180deg, #FFF5F8 0%, #FFFFFF 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid #FFE8EF;
}

.advice-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.advice-text,
.advice-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.7;
}

.advice-item {
  margin-bottom: 12rpx;
  padding-left: 20rpx;
  position: relative;
}

.advice-item::before {
  content: 'â€¢';
  position: absolute;
  left: 0;
  color: #FF6B9D;
  font-weight: bold;
}

.advice-item:last-child {
  margin-bottom: 0;
}

.growth-grid {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
  gap: 24rpx;
}

.growth-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  background: #FFF9FB;
  border-radius: 20rpx;
}

.growth-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.growth-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.growth-percentile {
  font-size: 26rpx;
  color: #FF6B9D;
  margin-bottom: 8rpx;
  font-weight: 600;
}

.growth-status {
  font-size: 26rpx;
  font-weight: 600;
}

.growth-divider {
  width: 1rpx;
  height: 100rpx;
  background: #F0F0F0;
}

.standard-box {
  background: #F8F9FA;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
}

.standard-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  font-weight: 600;
}

.standard-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.standard-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.no-growth {
  text-align: center;
  padding: 80rpx 40rpx;
}

.no-growth-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(255, 107, 157, 0.15));
}

.no-growth-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 36rpx;
}

.add-growth-btn {
  width: 300rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 24rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFFFFF 100%);
  border-radius: 20rpx;
  padding: 36rpx 24rpx;
  text-align: center;
  border: 1rpx solid #FFE8EF;
}

.stat-number {
  font-size: 52rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.stat-desc {
  font-size: 24rpx;
  color: #999;
}
