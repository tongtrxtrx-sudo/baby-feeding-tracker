.empty-state {
  text-align: center;
  padding: 160rpx 40rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
  font-weight: 500;
}

.add-btn {
  width: 320rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.welcome-card {
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  color: white;
  padding: 40rpx;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.25);
}

.welcome-card::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.welcome-card::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  right: 120rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.welcome-text {
  flex: 1;
  position: relative;
  z-index: 1;
}

.greeting {
  font-size: 28rpx;
  opacity: 0.95;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.baby-name {
  font-size: 52rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.baby-age {
  font-size: 28rpx;
  opacity: 0.9;
}

.today-summary {
  padding: 32rpx;
}

.summary-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 24rpx;
}

.summary-date {
  font-size: 26rpx;
  color: #999999;
  background: #FFF5F8;
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  font-weight: 500;
}

.summary-stats {
  gap: 20rpx;
}

.stat-card {
  flex: 1;
  text-align: center;
  padding: 32rpx 16rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 28rpx;
}

.stat-number {
  font-size: 56rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.quick-actions {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.action-card {
  flex: 1;
  text-align: center;
  padding: 48rpx 24rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  transition: all 0.2s ease;
}

.action-card:active {
  transform: scale(0.97);
  box-shadow: 0 2rpx 12rpx rgba(255, 107, 157, 0.1);
}

.action-emoji {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.action-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.section-more {
  font-size: 28rpx;
  color: #FF6B9D;
  font-weight: 500;
}

.recent-feedings {
  padding: 32rpx;
}

.feeding-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #FFE4E8;
}

.feeding-item:last-child {
  border-bottom: none;
}

.feeding-time {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.feeding-type {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
}

.feeding-amount {
  font-size: 44rpx;
  font-weight: 700;
  color: #FF6B9D;
}

.growth-card {
  padding: 32rpx;
}

.growth-stats {
  gap: 20rpx;
}

.growth-stat {
  flex: 1;
  text-align: center;
  padding: 28rpx 16rpx;
  background: linear-gradient(180deg, #FFF5F8 0%, #FFE4E8 100%);
  border-radius: 28rpx;
}

.growth-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #FF6B9D;
  margin-bottom: 8rpx;
}

.growth-label {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
}

.week-chart {
  padding: 32rpx;
}

.chart-container {
  margin-top: 12rpx;
}

.chart-bars {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 240rpx;
  padding: 24rpx 0;
}

.chart-bar-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 8rpx;
}

.chart-bar {
  width: 48rpx;
  background: linear-gradient(180deg, #FFB6C1 0%, #FF6B9D 100%);
  border-radius: 12rpx 12rpx 0 0;
  min-height: 12rpx;
  position: relative;
}

.bar-value {
  font-size: 22rpx;
  color: #FF6B9D;
  margin-bottom: 10rpx;
  font-weight: 600;
}

.bar-label {
  font-size: 24rpx;
  color: #999999;
  margin-top: 16rpx;
  font-weight: 500;
}

.welcome-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 1;
}

.welcome-icon {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(12rpx);
}

.share-entry {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 28rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 28rpx;
  margin-top: 20rpx;
  backdrop-filter: blur(12rpx);
}

.share-icon-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-text {
  font-size: 24rpx;
  color: white;
  margin-top: 8rpx;
  font-weight: 500;
}
