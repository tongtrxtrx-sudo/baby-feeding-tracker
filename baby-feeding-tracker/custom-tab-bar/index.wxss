.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 132rpx;
  background: #FFFFFF;
  display: flex;
  box-shadow: 0 -4rpx 24rpx rgba(255, 107, 157, 0.12);
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: 16rpx;
  z-index: 9999;
  border-radius: 36rpx 36rpx 0 0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.tab-icon {
  font-size: 52rpx;
  margin-bottom: 6rpx;
  transition: all 0.3s ease;
  opacity: 0.45;
}

.tab-item.active .tab-icon {
  opacity: 1;
  transform: scale(1.15);
}

.tab-text {
  font-size: 24rpx;
  color: #999999;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active .tab-text {
  color: #FF6B9D;
  font-weight: 600;
}

.tab-item::before {
  content: '';
  position: absolute;
  top: -10rpx;
  width: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FFB6C1 0%, #FF6B9D 100%);
  border-radius: 3rpx;
  transition: all 0.3s ease;
}

.tab-item.active::before {
  width: 48rpx;
}
