.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 148rpx;
  background: linear-gradient(180deg, #FFFFFF 0%, #FFF9FB 100%);
  display: flex;
  box-shadow: 0 -8rpx 40rpx rgba(255, 107, 157, 0.15);
  padding-bottom: env(safe-area-inset-bottom);
  padding-top: 12rpx;
  z-index: 9999;
  border-radius: 40rpx 40rpx 0 0;
  backdrop-filter: blur(20rpx);
}

.tab-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 107, 157, 0.2) 50%, transparent 100%);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  position: relative;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-icon {
  font-size: 48rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0.5;
  z-index: 2;
}

.tab-item.active .tab-icon-wrapper {
  transform: translateY(-8rpx);
}

.tab-item.active .tab-icon {
  opacity: 1;
  transform: scale(1.1);
}

.tab-icon-wrapper::before {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  background: linear-gradient(135deg, #FFB6C1 0%, #FF6B9D 100%);
  border-radius: 50%;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  opacity: 0;
}

.tab-item.active .tab-icon-wrapper::before {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.15;
}

.tab-icon-wrapper::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  width: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #FFB6C1 0%, #FF6B9D 100%);
  border-radius: 4rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.4);
}

.tab-item.active .tab-icon-wrapper::after {
  width: 32rpx;
}

.tab-text {
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 0.5rpx;
}

.tab-item.active .tab-text {
  color: #FF6B9D;
  font-weight: 700;
  transform: translateY(-4rpx);
}
